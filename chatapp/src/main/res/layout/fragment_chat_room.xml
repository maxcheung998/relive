                <!--android:cacheColorHint="@android:color/transparent"-->
                <!--android:layout_marginTop="0dp"-->
                <!--android:divider="@drawable/main_list_divider_line"/>-->

        <!--</in.srain.cube.views.ptr.PtrClassicFrameLayout>-->


    </FrameLayout>

</jiguang.chat.view.ChatRoomView>